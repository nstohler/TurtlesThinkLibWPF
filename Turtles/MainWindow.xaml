<Window x:Class="Turtles.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		Title="MainWindow" Height="600" Width="600">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<Canvas x:Name="playground" Grid.Row="0" />
		<Grid Grid.Row="1" Background="Orange">
			<StackPanel Orientation="Horizontal" Grid.Row="1" Margin="5" HorizontalAlignment="Right">
				<Button x:Name="btn1" Width="50" Click="btnRun1_Click" Margin="10,0,0,0">Run 1</Button>
				<Button x:Name="btn2" Width="50" Click="btnRun2_Click" Margin="10,0,0,0">Run 2</Button>
				<Button x:Name="btn3" Width="50" Click="btnRun3_Click" Margin="10,0,0,0">Run 3</Button>
				<Button x:Name="btn4" Width="50" Click="btnRun4_Click" Margin="10,0,0,0">Run 4</Button>
				<Button x:Name="btn5" Width="50" Click="btnRun5_Click" Margin="10,0,0,0">Run 5</Button>
				<Button x:Name="btn6" Width="50" Click="btnRun6_Click" Margin="10,0,0,0">Run 6</Button>
			</StackPanel>
		</Grid>
	</Grid>
</Window>
